{% doc %}
  @prompt
    Create a full-width founder section with a two-column layout that spans the entire page width with proper alignment. The LEFT side should have an editable circular image holder for the founder's photo. The RIGHT side should have editable text fields including:
    - Heading: "The Founder"
    - Subheading: "Founder & Creative Director"
    - Body text: "Share your connection to storytelling, cultural heritage, fashion, and the inspiration behind ATAH. This is where your personal journey meets the brand's vision."
    
    The section should have:
    - Full page width layout with balanced columns
    - Premium spacing and padding that matches luxury brand aesthetics
    - Circular image frame on the left with elegant styling
    - Text content aligned and spaced beautifully on the right
    - All text fields and the circular image fully customizable through theme editor settings
    - Responsive design that stacks vertically on mobile with image above text
    - Clean, minimal design with proper vertical alignment between image and text content
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-founder-section-{{ ai_gen_id }} {
    width: 100%;
    padding: 80px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-founder-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .ai-founder-image-column-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-founder-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius: 50%;
    overflow: hidden;
    border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .ai-founder-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-founder-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-founder-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-founder-text-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-founder-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    line-height: 1.2;
    letter-spacing: 0.02em;
  }

  .ai-founder-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    line-height: 1.4;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .ai-founder-body-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_size }}px;
    color: {{ block.settings.body_color }};
    line-height: 1.8;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-founder-section-{{ ai_gen_id }} {
      padding: 60px 20px;
    }

    .ai-founder-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 50px;
    }

    .ai-founder-image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_size | times: 0.8 }}px;
      height: {{ block.settings.image_size | times: 0.8 }}px;
    }

    .ai-founder-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-founder-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-founder-body-{{ ai_gen_id }} {
      font-size: {{ block.settings.body_size | times: 0.95 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-founder-section-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-founder-container-{{ ai_gen_id }} {
      gap: 40px;
    }

    .ai-founder-image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_size | times: 0.7 }}px;
      height: {{ block.settings.image_size | times: 0.7 }}px;
    }

    .ai-founder-text-column-{{ ai_gen_id }} {
      gap: 20px;
    }

    .ai-founder-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-founder-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.85 }}px;
    }

    .ai-founder-body-{{ ai_gen_id }} {
      font-size: {{ block.settings.body_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-founder-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-founder-container-{{ ai_gen_id }}">
    <div class="ai-founder-image-column-{{ ai_gen_id }}">
      <div class="ai-founder-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.founder_image %}
          <img
            src="{{ block.settings.founder_image | image_url: width: 800 }}"
            alt="{{ block.settings.founder_image.alt | escape }}"
            loading="lazy"
            width="800"
            height="800"
          >
        {% else %}
          <div class="ai-founder-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-founder-text-column-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-founder-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <p class="ai-founder-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}

      {% if block.settings.body_text != blank %}
        <div class="ai-founder-body-{{ ai_gen_id }}">{{ block.settings.body_text }}</div>
      {% endif %}
    </div>
  </div>
</div>

