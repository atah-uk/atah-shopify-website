{% doc %}
  @prompt
    Create a full-width partnerships section that spans the entire page width with perfect alignment on both mobile and desktop. The section should include:
    
    - Main heading: "Our Partners" at the top with elegant typography
    - Three editable image slots displayed side by side on desktop (equal width, properly spaced)
    - Images stack vertically on mobile devices
    - Below the images, add editable text: "We're looking to collaborate with visionary brands and creators through partnerships and sponsorships."
    - CTA button labeled "Partner With Us" with an editable link
    
    Design requirements:
    - Full page width layout with proper container alignment
    - Minimal, modern, and premium luxury brand aesthetic
    - Elegant typography with proper font hierarchy
    - Premium spacing and padding throughout
    - Images should be properly sized and aligned with balanced spacing
    - Button should be styled elegantly with hover effects
    - All elements (heading, images, body text, button text, and button link) fully customizable through theme editor settings
    - Responsive design that maintains perfect alignment on all screen sizes
    - Clean, balanced layout with consistent margins and padding
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-partnerships-section-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-partnerships-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-partnerships-heading-{{ ai_gen_id }} {
    text-align: center;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    text-transform: {{ block.settings.heading_transform }};
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
  }

  .ai-partnerships-images-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.image_gap }}px;
    margin-bottom: {{ block.settings.images_spacing }}px;
  }

  .ai-partnerships-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: {{ block.settings.image_placeholder_bg }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-partnerships-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-partnerships-image-wrapper-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-partnerships-text-{{ ai_gen_id }} {
    text-align: center;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.text_line_height }};
    margin: 0 auto {{ block.settings.text_spacing }}px;
    max-width: {{ block.settings.text_max_width }}px;
  }

  .ai-partnerships-button-wrapper-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
  }

  .ai-partnerships-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    text-decoration: none;
    text-transform: {{ block.settings.button_text_transform }};
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-partnerships-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-partnerships-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top_mobile }}px 0 {{ block.settings.section_padding_bottom_mobile }}px;
    }

    .ai-partnerships-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-partnerships-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
      margin-bottom: {{ block.settings.heading_spacing_mobile }}px;
    }

    .ai-partnerships-images-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.image_gap_mobile }}px;
      margin-bottom: {{ block.settings.images_spacing_mobile }}px;
    }

    .ai-partnerships-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
      margin-bottom: {{ block.settings.text_spacing_mobile }}px;
    }

    .ai-partnerships-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
      font-size: {{ block.settings.button_text_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-partnerships-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-partnerships-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-partnerships-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-partnerships-images-{{ ai_gen_id }}">
      <div class="ai-partnerships-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image_1 %}
          <img
            src="{{ block.settings.image_1 | image_url: width: 800 }}"
            alt="{{ block.settings.image_1.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_1.width }}"
            height="{{ block.settings.image_1.height }}"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
      </div>

      <div class="ai-partnerships-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image_2 %}
          <img
            src="{{ block.settings.image_2 | image_url: width: 800 }}"
            alt="{{ block.settings.image_2.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_2.width }}"
            height="{{ block.settings.image_2.height }}"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
      </div>

      <div class="ai-partnerships-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image_3 %}
          <img
            src="{{ block.settings.image_3 | image_url: width: 800 }}"
            alt="{{ block.settings.image_3.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_3.width }}"
            height="{{ block.settings.image_3.height }}"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
      </div>
    </div>

    {% if block.settings.body_text != blank %}
      <div class="ai-partnerships-text-{{ ai_gen_id }}">
        {{ block.settings.body_text }}
      </div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <div class="ai-partnerships-button-wrapper-{{ ai_gen_id }}">
        <a href="{{ block.settings.button_link }}" class="ai-partnerships-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

